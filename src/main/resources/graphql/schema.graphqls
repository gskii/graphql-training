schema {
    query: Query
    mutation: Mutation
}

type Query {
    bookById(id: ID): Book
    linkById(id: ID): Link
    allLinks: [Link]
}

type Mutation {
    createLink(url: String!, description: String!): Link
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

type Link {
    id: ID!
    url: String!
    description: String!
}